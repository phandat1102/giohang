<div class="container my-5" style="min-height: 400px;">
    <div class="d-flex flex-column align-items-center">
        <div class="col-md-6">
            <% cart.items.forEach(item => { %>
                <div class="mb-4">
                    <div class="card position-relative">
                        <span class="position-absolute top-0 end-0 m-1">
                            <a href="/remove-item/<%= item.productId %>" type="button" class="btn btn-outline-danger btn-sm">&times;</a>
                        </span>
                        <div class="row g-0">
                            <div class="col-md-2">
                                <img src="<%= item.image %>" style="width: 80px; height: 100px;" class="img-fluid rounded-start p-1" alt="<%= item.name %>">
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex align-items-center gap-4">
                                    <h5 class="card-title" style="min-width: 200px;"><%= item.name %></h5>
                                    <div class="btn-group d-flex gap-2" role="group" aria-label="Quantity">
                                        <a href="/decrease-item/<%= item.productId %>"><i class="bi bi-dash" style="font-size: 30px;"></i></a>
                                        <div class="card-text" style="cursor: pointer; font-size: 18px; margin-top: 10px;"><%= item.quantity %></div>
                                        <a href="/increase-item/<%= item.productId %>"><i class="bi bi-plus" style="font-size: 30px;"></i></a>
                                    </div>
                                    <p class="card-text" style="font-size: larger;"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(item.price) %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
    
            <div class="md-4">
                <hr>
                <div class="text-end">
                    <span style="font-size: 18px; font-weight: 500;">Total Price: </span>
                    <span style="font-size: 20px; font-weight: 600;">
                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(cart.totalPrice) %>
                    </span>
                </div>
            </div>
            <div class="text-end mt-3">
                <a href="/confirm-order" class="btn btn-primary">Đặt hàng</a>
            </div>
        </div>
        
    </div>
</div>
