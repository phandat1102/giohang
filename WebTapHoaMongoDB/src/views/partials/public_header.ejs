<header class="bg-dark text-light py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3">
                <h1 class="mb-0">Tạp hóa</h1>
            </div>
            <div class="col-md-6">
                <form class="input-group">
                    <input type="text" class="form-control" placeholder="Search watch...">
                    <button class="btn btn-outline-light" type="button">Search</button>
                </form>
            </div>
            <div class="col-md-3 text-end ">
                <% if (user) { %>
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Xin chào <%= user.fullname %>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                          <li><a class="dropdown-item" href="#">Thông tin</a></li>
                          <li><a class="dropdown-item" href="#">Đơn hàng</a></li>
                          <li><a class="dropdown-item" href="/login" id="logoutBtn">Đăng xuất</a></li>
                        </ul>
                      </div>
                <% } else { %>
                    <a class="btn btn-outline-light me-2" href="/login">Login</a>
                    <a class="btn btn-primary me-2" href="/register">Sign Up</a>
                <% } %>
                <a href="/cart-detail" class="btn btn-outline-light position-relative">
                    <span>Cart</span>
                    <span class="position-absolute top-0 start-100 translate-middle badge bg-danger rounded-pill">0</span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <nav>
                    <ul class="nav justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Customize</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">New Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
<script>
    document.getElementById('logoutBtn').addEventListener('click', function(event) {
        event.preventDefault(); 

        fetch('/logout', {
            method: 'GET'
        })
        .then(response => {
            
            window.location.href = '/';
        })
        .catch(error => console.error('Error logging out:', error));
    });
</script>